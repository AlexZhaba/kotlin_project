<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fcffd6">
    <TextView
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text=""
        android:textSize="30sp"
        android:id="@+id/searchStringTitle" />
    <TextView
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/searchStringTitle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/findText"
        android:textSize="20sp"
        android:text="Finded products"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="20dp"
        android:id="@+id/searchProductList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/findText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layoutManager="LinearLayoutManager" />

</androidx.constraintlayout.widget.ConstraintLayout>